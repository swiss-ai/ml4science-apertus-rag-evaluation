# WARC Tools - Environment Configuration Example
# Copy this to .env and fill in your values

# ============================================================================
# WARC EXTRACTION
# ============================================================================
WARC_INPUT_DIR=data_sample/warc_in
OUTPUT_DIR=output/extracted
SEEDS_XLSX=data_sample/urls/2025-11-20_19945_topics.xlsx
FAILED_WARCS_FILE=output/failed_warcs.txt
EXTRACT_MODE=all

# ============================================================================
# DEDUPLICATION
# ============================================================================
DEDUP_INPUT_ROOT=output/extracted
DEDUP_OUTPUT_ROOT=output/deduplicated
DEDUP_MODE=all
DEDUP_DB_DIR=output/.dedup_db

# ============================================================================
# ELASTICSEARCH
# ============================================================================
ES_URL=http://localhost:9200
ES_INDEX_NAME=warc_rag_index
ES_USER=
ES_PASSWORD=
ES_VERIFY_CERTS=false

# ============================================================================
# INDEXING
# ============================================================================
JSONL_DIR=output/deduplicated/html
BATCH_SIZE=10
CHUNK_SIZE=512
CHUNK_OVERLAP=50
FAILED_WARCS_INDEXING_FILE=output/failed_indexing.txt
NO_RECREATE_INDEX=0

# ============================================================================
# EMBEDDING MODEL - Choose ONE provider
# ============================================================================
# Option 1: Ollama (Local, Recommended for Testing)
EMBED_PROVIDER=ollama
EMBED_MODEL=nomic-embed-text

# Option 2: Hugging Face (Local)
# EMBED_PROVIDER=hf
# EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Option 3: OpenAI
# EMBED_PROVIDER=openai
# EMBED_MODEL=text-embedding-3-small
# EMBED_API_KEY=sk-your-key-here

# Option 4: CSCS/SwissAI
# EMBED_PROVIDER=cscs
# EMBED_MODEL=your-model-name
# EMBED_BASE_URL=https://api.swissai.cscs.ch/v1
# EMBED_API_KEY=your-key-here

# ============================================================================
# LLM MODEL - Choose ONE provider
# ============================================================================
# Option 1: Ollama (Local, Recommended for Testing)
LLM_PROVIDER=ollama
LLM_MODEL=llama3:8b

# Option 2: OpenAI
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_API_KEY=sk-your-key-here

# Option 3: CSCS/SwissAI
# LLM_PROVIDER=cscs
# LLM_MODEL=llama-3-70b-instruct
# LLM_BASE_URL=https://api.swissai.cscs.ch/v1
# LLM_API_KEY=your-key-here

LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# ============================================================================
# RAG QUERY
# ============================================================================
RAG_TOP_K=5

# ============================================================================
# BASELINE EVALUATION (Optional)
# ============================================================================
CSCS_API_KEY=
CSCS_BASE_URL=https://api.swissai.cscs.ch/v1

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=

# ============================================================================
# DEVELOPMENT MODE
# ============================================================================
DEV_MODE=1

